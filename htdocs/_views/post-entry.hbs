<div class="panel panel-{{#if is_draft}}warning{{else}}info{{/if}} jq-event-listener" data-fb-postid="{{id}}">
	<div class="panel-heading">
		<div class="pull-right">
			<div class="btn-group" role="group">
				  {{#if is_draft}}<button type="button" class="btn btn-info btn-xs publish">publish</button>{{/if}}
				  <button type="button" class="btn btn-danger btn-xs delete"><span class="glyphicon glyphicon-trash"></span></button>
			</div>
		</div>
		<div>
			{{formatdate date}} 
		</div>
	</div>
	<div class="panel-body">
		{{#if story}}
		<p>
			<strong>{{story}}</strong>
		</p>
		{{/if}}

		<p>
		{{message}}
		</p>

		<div style="text-align: right;">
		{{#if link}}
			<button class="btn btn-default btn-xs" onclick="window.open('{{link}}');">view Â»</button><br />
		{{/if}}
		</div>
	</div>
	{{#if views}}<div class="panel-footer">views: <span class="post-views">{{views}}</span></div>{{/if}}
</div>